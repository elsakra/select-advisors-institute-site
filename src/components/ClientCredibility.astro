---

<section id="clients" class="py-32 md:py-40 bg-stone-900 relative overflow-hidden" data-module-key="client_credibility" data-dominant-signal="stat">
  <!-- Background Texture -->
  <div class="absolute inset-0">
    <div class="absolute top-0 right-1/5 w-[600px] h-[600px] bg-amber-600/20 rounded-full blur-[150px]"></div>
    <div class="absolute bottom-0 left-1/5 w-[500px] h-[500px] bg-emerald-600/15 rounded-full blur-[120px]"></div>
  </div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-20 animate-on-scroll">
      <h2 class="text-6xl font-light tracking-tight text-white mb-6" data-section-header-recipe="primary">
        Trusted by <span class="font-display italic">Industry Leaders</span>
      </h2>
      <p class="text-xl text-stone-300 max-w-3xl mx-auto">
        Our proven strategies have transformed practices at the world's most prestigious financial institutions
      </p>
    </div>
    
    <!-- Client Logos Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 gap-12 mb-20">
      <div class="flex items-center justify-center animate-on-scroll" data-delay="100">
        <div class="text-white/80 text-2xl font-light tracking-wider">Goldman Sachs</div>
      </div>
      <div class="flex items-center justify-center animate-on-scroll" data-delay="200">
        <div class="text-white/80 text-2xl font-light tracking-wider">Merrill Lynch</div>
      </div>
      <div class="flex items-center justify-center animate-on-scroll" data-delay="300">
        <div class="text-white/80 text-2xl font-light tracking-wider">RBC</div>
      </div>
    </div>
    
    <!-- Stats Grid -->
    <div class="grid md:grid-cols-3 gap-8 animate-on-scroll" data-delay="400">
      <div class="text-center">
        <div class="text-8xl font-light tracking-tighter text-amber-600 mb-2" data-stat-recipe="primary">1000+</div>
        <p class="text-xl text-stone-300">Financial Advisors Transformed</p>
      </div>
      <div class="text-center">
        <div class="text-8xl font-light tracking-tighter text-amber-600 mb-2" data-stat-recipe="primary">$1.5B</div>
        <p class="text-xl text-stone-300">Client AUM Growth Achieved</p>
      </div>
      <div class="text-center">
        <div class="text-8xl font-light tracking-tighter text-amber-600 mb-2" data-stat-recipe="primary">10+</div>
        <p class="text-xl text-stone-300">Years of Excellence</p>
      </div>
    </div>
    
    <!-- Additional Client Image -->
    <div class="mt-20 animate-on-scroll" data-delay="500">
      <img 
        src="https://res.cloudinary.com/dil14r8je/image/upload/v1768340824/auto-site-builder/Select%20Advisors%20Institute/image_15.jpg" 
        alt="Client success story"
        class="rounded-3xl shadow-2xl w-full max-w-4xl mx-auto h-96 object-cover"
      />
    </div>
  </div>
</section>