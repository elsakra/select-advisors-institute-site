---
const testimonials = [
  {
    quote: "Select Advisors helped us grow from $250mm to $1.5 billion in just five years. Their strategic guidance was transformational.",
    author: "Managing Partner",
    company: "Independent RIA",
    image: "https://res.cloudinary.com/dil14r8je/image/upload/v1768340824/auto-site-builder/Select%20Advisors%20Institute/image_15.jpg"
  },
  {
    quote: "The sales training and marketing strategies we implemented with SAI have completely transformed how we attract and serve ultra-high-net-worth clients.",
    author: "Senior Advisor",
    company: "Wirehouse Team",
    image: "https://res.cloudinary.com/dil14r8je/image/upload/v1768340824/auto-site-builder/Select%20Advisors%20Institute/image_17.jpg"
  },
  {
    quote: "Amy and her team understand the unique challenges of serving wealthy families. Their fractional family office model has been a game-changer.",
    author: "Family Office Director",
    company: "Multi-Family Office",
    image: "https://res.cloudinary.com/dil14r8je/image/upload/v1768340824/auto-site-builder/Select%20Advisors%20Institute/image_16.jpg"
  }
];
---

<section class="py-24 md:py-32 bg-gray-50">
  <div class="max-w-7xl mx-auto px-6 md:px-12">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 tracking-tight animate-on-scroll">
        Trusted by the industry's best
      </h2>
      <p class="mt-4 text-xl text-gray-600 animate-on-scroll">
        See how we've helped elite firms achieve extraordinary results.
      </p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8">
      {testimonials.map((testimonial, index) => (
        <div 
          class="bg-white rounded-2xl p-8 shadow-xl shadow-gray-200/50 hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 animate-on-scroll"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <div class="flex items-center gap-1 mb-6">
            {[...Array(5)].map(() => (
              <svg class="w-5 h-5 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            ))}
          </div>
          <p class="text-gray-700 leading-relaxed mb-6 italic">"{testimonial.quote}"</p>
          <div class="flex items-center gap-4">
            <img 
              src={testimonial.image}
              alt={testimonial.author}
              class="w-12 h-12 rounded-full object-cover"
            />
            <div>
              <div class="font-semibold text-gray-900">{testimonial.author}</div>
              <div class="text-sm text-gray-600">{testimonial.company}</div>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12 animate-on-scroll">
      <a href="https://www.selectadvisorsinstitute.com/testimonials" class="inline-flex items-center gap-2 text-violet-600 hover:text-fuchsia-600 font-semibold transition-colors">
        View all success stories
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</section>