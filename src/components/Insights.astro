---
const featuredArticles = [
  {
    title: "Who Are the 30 Ultra High Net Worth Families Living on Indian Creek Island?",
    excerpt: "An exclusive look at one of the most prestigious addresses in the world and the families who call it home.",
    image: "https://res.cloudinary.com/dil14r8je/image/upload/v1768340819/auto-site-builder/Select%20Advisors%20Institute/image_1.jpg",
    category: "Wealth Management"
  },
  {
    title: "2025 Money in Motion Triggers You Are Most Likely Unaware Of",
    excerpt: "Discover the hidden catalysts that drive wealth transfers and how to position your firm to capture these opportunities.",
    image: "https://res.cloudinary.com/dil14r8je/image/upload/v1768340822/auto-site-builder/Select%20Advisors%20Institute/image_13.jpg",
    category: "Strategy"
  },
  {
    title: "The Future Is Solo: Scaling Wealth Management Without Hiring More",
    excerpt: "How modern advisors are leveraging technology and strategic partnerships to grow without expanding headcount.",
    image: "https://res.cloudinary.com/dil14r8je/image/upload/v1768441934/auto-site-builder/Select%20Advisors%20Institute/image_18.jpg",
    category: "Practice Management"
  }
];
---

<section id="insights" class="py-24 md:py-32" data-module-key="featured_insights" data-dominant-signal="image">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="text-center mb-16 animate-on-scroll">
      <h2 class="text-3xl md:text-4xl font-light tracking-tight text-slate-900 mb-6" data-section-header-recipe="primary">
        Industry-Leading Insights
      </h2>
      <p class="text-lg leading-relaxed text-slate-700 max-w-3xl mx-auto">
        Stay ahead with our latest thinking on wealth management, practice growth, and industry trends.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {featuredArticles.map((article, index) => (
        <article class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group animate-on-scroll" data-card-recipe="primary">
          <div class="aspect-video overflow-hidden">
            <img 
              src={article.image}
              alt={article.title}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="p-8">
            <span class="text-sm text-blue-900 font-medium">{article.category}</span>
            <h3 class="text-xl font-medium text-slate-900 mt-2 mb-3">{article.title}</h3>
            <p class="text-slate-700 mb-4">{article.excerpt}</p>
            <a href="/resources" class="text-blue-900 font-medium hover:text-blue-800 transition-colors inline-flex items-center">
              Read Article
              <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </article>
      ))}
    </div>
    
    <div class="text-center mt-12 animate-on-scroll">
      <a href="/resources" class="bg-blue-900 text-white px-8 py-4 rounded-full font-medium hover:bg-blue-800 transition-colors duration-200 inline-flex items-center" data-button-recipe="primary">
        View All Resources
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</section>