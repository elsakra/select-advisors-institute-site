  {
    title: "Fractional Family Office",
    description: "Serving as your single point of contact to coordinate top priorities for wealthy families.",
    icon: "M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
    link: "/ultra-high-net-worth-and-family-office"
  },
  {
    title: "Management Consulting",
    description: "Strategic guidance for RIAs, wirehouses, and independent wealth management firms.",
    icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
    link: "/management-consulting"
  },
  {
    title: "Sales Excellence Training",
    description: "Consultative sales programs matching your unique personality and firm culture.",
    icon: "M13 10V3L4 14h7v7l9-11h-7z",
    link: "/sales-coaching-management"
  },
  {
    title: "Marketing & Branding",
    description: "Complete transformation including rebranding, digital strategy, and content creation.",
    icon: "M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01",
