---
const articles = [
  {
    title: "Who Are the 30 Ultra High Net Worth Families Living on Indian Creek Island?",
    image: "https://res.cloudinary.com/dil14r8je/image/upload/v1768340819/auto-site-builder/Select%20Advisors%20Institute/image_1.jpg",
    category: "Ultra High Net Worth",
    featured: true
  },
  {
    title: "Meet the RIA that went from $250mm to $1.5 billion in FIVE YEARS",
    image: "https://res.cloudinary.com/dil14r8je/image/upload/v1768340819/auto-site-builder/Select%20Advisors%20Institute/image_4.jpg",
    category: "Success Stories"
  },
  {
    title: "2025 Money in Motion Triggers You Are Most Likely Unaware Of",
    image: "https://res.cloudinary.com/dil14r8je/image/upload/v1768340821/auto-site-builder/Select%20Advisors%20Institute/image_9.jpg",
    category: "Market Insights"
  },
  {
    title: "The Future Is Solo: Scaling Wealth Management Without Hiring More",
    image: "https://res.cloudinary.com/dil14r8je/image/upload/v1768340824/auto-site-builder/Select%20Advisors%20Institute/image_16.jpg",
    category: "Industry Trends"
  }
];
---

<section id="insights" class="py-24 lg:py-32 bg-gradient-to-br from-stone-50 via-white to-amber-50/30">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="text-center mb-16 animate-on-scroll">
      <h2 class="font-serif text-4xl lg:text-5xl font-light tracking-tight text-stone-900 mb-4">
        Featured Insights
      </h2>
      <p class="text-xl text-stone-600 max-w-2xl mx-auto">
        Exclusive perspectives on wealth management, family offices, and the future of financial advisory
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
      <!-- Featured Article -->
      <div class="lg:col-span-7 animate-on-scroll">
        <article class="group relative bg-white rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300">
          <div class="aspect-[16/9] overflow-hidden">
            <img 
              src={articles[0].image}
              alt={articles[0].title}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
          </div>
          <div class="p-8 lg:p-10">
            <span class="inline-block px-3 py-1 bg-amber-100 text-amber-700 text-sm font-medium rounded-full mb-4">
              {articles[0].category}
            </span>
            <h3 class="text-2xl lg:text-3xl font-bold text-stone-900 mb-4 leading-tight">
              {articles[0].title}
            </h3>
            <a href="#" class="inline-flex items-center gap-2 text-amber-600 font-semibold hover:text-amber-700 transition-colors">
              Read More
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </article>
      </div>
      
      <!-- Side Articles -->
      <div class="lg:col-span-5 space-y-6">
        {articles.slice(1).map((article, index) => (
          <article class="group bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 animate-on-scroll" style={`animation-delay: ${(index + 1) * 150}ms`}>
            <div class="flex gap-6">
              <div class="w-1/3 aspect-[4/3] overflow-hidden">
                <img 
                  src={article.image}
                  alt={article.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                />
              </div>
              <div class="flex-1 p-6">
                <span class="inline-block px-2 py-1 bg-stone-100 text-stone-600 text-xs font-medium rounded-full mb-3">
                  {article.category}
                </span>
                <h3 class="text-lg font-bold text-stone-900 mb-2 leading-tight line-clamp-2">
                  {article.title}
                </h3>
                <a href="#" class="inline-flex items-center gap-1 text-sm text-amber-600 font-semibold hover:text-amber-700 transition-colors">
                  Read More
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
    
    <div class="mt-12 text-center animate-on-scroll">
      <a href="/resources" class="inline-flex items-center gap-2 px-8 py-4 bg-stone-900 text-white rounded-full font-semibold hover:bg-stone-800 hover:scale-105 transition-all duration-300">
        View All Insights
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</section>