---

<section id="home" class="relative min-h-screen overflow-hidden" data-hero-pattern="full-bleed-photo" data-module-key="hero" data-dominant-signal="image">
  <!-- Hero Background Image with Cinematic Treatment -->
  <div class="absolute inset-0">
    <img 
      src="https://res.cloudinary.com/dil14r8je/image/upload/v1768340819/auto-site-builder/Select%20Advisors%20Institute/image_0.jpg" 
      alt="Executive conference room"
      class="hero-image absolute inset-0 w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-stone-900/80 via-stone-800/60 to-transparent"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-stone-900/50 via-transparent to-transparent"></div>
  </div>
  
  <!-- Navigation -->
  <nav class="navbar relative z-20 transition-all duration-300">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex items-center justify-between py-6">
        <a href="/" class="text-2xl font-display font-bold text-white tracking-tight">
          SELECT ADVISORS INSTITUTE
        </a>
        <div class="hidden md:flex items-center gap-8">
          <a href="#services" class="text-white/90 hover:text-white relative after:absolute after:bottom-[-2px] after:left-0 after:w-0 after:h-[2px] after:bg-current after:transition-[width] after:duration-300 hover:after:w-full">Services</a>
          <a href="#clients" class="text-white/90 hover:text-white relative after:absolute after:bottom-[-2px] after:left-0 after:w-0 after:h-[2px] after:bg-current after:transition-[width] after:duration-300 hover:after:w-full">Clients</a>
          <a href="#insights" class="text-white/90 hover:text-white relative after:absolute after:bottom-[-2px] after:left-0 after:w-0 after:h-[2px] after:bg-current after:transition-[width] after:duration-300 hover:after:w-full">Insights</a>
          <a href="#leadership" class="text-white/90 hover:text-white relative after:absolute after:bottom-[-2px] after:left-0 after:w-0 after:h-[2px] after:bg-current after:transition-[width] after:duration-300 hover:after:w-full">Leadership</a>
          <a href="/schedule-a-call" class="inline-flex items-center gap-2 px-8 py-4 bg-amber-600 text-white rounded-full hover:scale-105 hover:bg-amber-700 transition-all duration-200 font-medium glow-button" data-button-recipe="primary">
            Schedule Strategy Call
          </a>
        </div>
      </div>
    </div>
  </nav>
  
  <!-- Hero Content - Asymmetric Layout -->
  <div class="relative z-10 min-h-screen flex items-center">
    <div class="max-w-7xl mx-auto px-6 grid md:grid-cols-5 gap-12 items-center">
      <div class="md:col-span-3 animate-on-scroll">
        <h1 class="text-8xl font-light tracking-tighter leading-tight text-white mb-6" data-section-header-recipe="primary">
          Investor Advocates &<br/>
          <span class="font-display">Advisor Partners</span>
        </h1>
        <p class="text-xl leading-relaxed text-white/90 mb-12 max-w-2xl">
          We serve as the intersection of ultra-high-net-worth family needs and the financial services professionals who serve them.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/schedule-a-call" class="inline-flex items-center gap-2 px-8 py-4 bg-amber-600 text-white rounded-full hover:scale-105 hover:bg-amber-700 transition-all duration-200 font-medium shadow-lg shadow-stone-900/25 glow-button group" data-button-recipe="primary">
            Schedule Strategy Call
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a href="#services" class="inline-flex items-center gap-2 px-8 py-4 text-white border border-white/30 rounded-full hover:bg-white/10 transition-all duration-200 font-medium">
            Explore Services
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/0 -translate-x-1/0 animate-float">
    <svg class="w-6 h-6 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>