<section id="leadership" class="py-32 md:py-40 bg-stone-900 relative overflow-hidden" data-module-key="founder_story" data-dominant-signal="image">
  <!-- Background Gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-stone-900 via-stone-800 to-stone-900"></div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-6">
    <!-- Asymmetric Grid Layout -->
    <div class="grid md:grid-cols-5 gap-16 items-center">
      <!-- Founder Image -->
      <div class="md:col-span-2 animate-on-scroll-scale">
        <div class="relative">
          <div class="absolute inset-0 bg-amber-600/20 rounded-3xl blur-3xl"></div>
          <img 
            src="https://res.cloudinary.com/dil14r8je/image/upload/v1768441935/auto-site-builder/Select%20Advisors%20Institute/image_21.jpg" 
            alt="Amy Parvaneh - Founder and CEO"
            class="relative z-10 w-full rounded-3xl shadow-2xl"
          />
