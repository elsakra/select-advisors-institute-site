<section id="contact" class="relative py-24 lg:py-32 overflow-hidden bg-gradient-to-br from-amber-50 via-orange-50/50 to-rose-50/30">
  <div class="container mx-auto max-w-7xl px-6 lg:px-8">
    <div class="relative">
      <div class="max-w-4xl mx-auto text-center space-y-8 animate-on-scroll">
        <h2 class="text-4xl lg:text-5xl xl:text-6xl font-bold tracking-tight text-slate-900">
          Ready to Transform Your
          <span class="text-gradient"> Practice?</span>
        </h2>
        
        <p class="text-xl lg:text-2xl text-slate-700 leading-relaxed max-w-3xl mx-auto">
          Join thousands of elite advisors who have elevated their practice with Select Advisors Institute.
        </p>
        
        <!-- Trust Indicators -->
        <div class="flex flex-wrap justify-center gap-8 py-8">
          <div class="flex items-center gap-2 text-slate-600">
            <svg class="w-5 h-5 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
            <span class="font-medium">Since 2013</span>
          </div>
          <div class="flex items-center gap-2 text-slate-600">
            <svg class="w-5 h-5 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
            <span class="font-medium">Goldman Sachs, Merrill Lynch, RBC</span>
          </div>
          <div class="flex items-center gap-2 text-slate-600">
            <svg class="w-5 h-5 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
            <span class="font-medium">Proven ROI</span>
          </div>
        </div>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/schedule-a-call" 
            class="inline-flex items-center justify-center gap-2 px-10 py-5 text-lg font-semibold bg-gradient-to-r from-amber-600 to-orange-500 text-white rounded-full shadow-xl shadow-amber-500/30 hover:shadow-2xl hover:shadow-amber-500/40 hover:scale-105 transition-all duration-300"
          >
            Schedule Your Call Today
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a 
            href="#services" 
            class="inline-flex items-center justify-center px-10 py-5 text-lg font-semibold border-2 border-amber-600 text-amber-700 rounded-full hover:bg-amber-50 transition-all duration-300"
          >
            Explore Our Services
          </a>
        </div>
        
        <!-- Contact Info -->
        <div class="pt-8 text-slate-600">
          <p class="text-lg">
            Questions? Call us at <a href="tel:+1234567890" class="text-amber-600 font-semibold hover:text-amber-700">(123) 456-7890</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>