<section id="contact" class="relative py-24 md:py-32 bg-slate-900 overflow-hidden" data-module-key="cta_section" data-dominant-signal="headline">
  <!-- Background Texture -->
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,rgba(59,130,246,0.15),transparent_70%)]"></div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-light tracking-tight text-white mb-6 animate-on-scroll" data-section-header-recipe="primary">
        Ready to Transform Your Practice?
      </h2>
      <p class="text-lg leading-relaxed text-white/90 mb-12 animate-on-scroll">
        Whether you're a financial firm seeking strategic growth or an ultra-high-net-worth family requiring comprehensive coordination, we're here to deliver exceptional results.
      </p>
      
      <!-- CTA Options -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-2xl mx-auto mb-12">
        <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl p-6 animate-on-scroll">
          <h3 class="text-xl font-medium text-white mb-3">For Financial Firms</h3>
          <p class="text-white/80 mb-4">Accelerate growth with proven strategies</p>
          <a href="/schedule-a-call" class="bg-blue-900 text-white px-6 py-3 rounded-full font-medium hover:bg-blue-800 transition-colors duration-200 inline-flex items-center text-sm" data-button-recipe="primary">
            Schedule Strategy Call
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
        
        <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl p-6 animate-on-scroll">
          <h3 class="text-xl font-medium text-white mb-3">For Wealthy Families</h3>
          <p class="text-white/80 mb-4">Coordinate your complex financial needs</p>
          <a href="/ultra-high-net-worth-and-family-office" class="bg-white text-slate-900 px-6 py-3 rounded-full font-medium hover:bg-slate-100 transition-colors duration-200 inline-flex items-center text-sm">
            Learn More
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Contact Information -->
      <div class="text-white/80 animate-on-scroll">
        <p class="mb-2">Or reach out directly:</p>
        <p class="text-lg">Call us at <a href="tel:1-800-SELECT" class="text-white hover:text-blue-400 transition-colors">1-800-SELECT</a></p>
        <p class="text-lg">Email: <a href="mailto:info@selectadvisorsinstitute.com" class="text-white hover:text-blue-400 transition-colors">info@selectadvisorsinstitute.com</a></p>
      </div>
    </div>
  </div>
</section>