<section id="contact" class="py-32 md:py-40 bg-gradient-to-br from-amber-50 via-white to-stone-50 relative overflow-hidden" data-module-key="cta_consultation" data-dominant-signal="headline">
  <!-- Decorative Elements -->
  <div class="absolute top-1/0 left-1/0 -translate-x-1/0 -translate-y-1/0 w-[800px] h-[800px] bg-amber-100/30 rounded-full blur-3xl"></div>
  
  <div class="relative z-10 max-w-4xl mx-auto px-6 text-center">
    <div class="animate-on-scroll">
      <h2 class="text-7xl md:text-8xl font-light tracking-tighter text-stone-900 mb-8 leading-tight" data-section-header-recipe="primary">
        Ready to <span class="font-display italic">Transform</span> Your Practice?
      </h2>
      <p class="text-2xl text-stone-700 mb-12 max-w-3xl mx-auto leading-relaxed">
        Join the elite financial professionals who have elevated their firms to extraordinary heights.
      </p>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center animate-on-scroll" data-delay="200">
        <a href="/schedule-a-call" class="inline-flex items-center gap-3 px-10 py-5 bg-amber-600 text-white text-lg rounded-full hover:scale-105 hover:bg-amber-700 hover:shadow-2xl hover:shadow-amber-600/25 transition-all duration-300 font-medium group" data-button-recipe="primary">
          Schedule Your Strategy Call
          <svg class="w-6 h-6 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        <a href="/management-consulting" class="inline-flex items-center gap-2 px-8 py-5 text-stone-900 text-lg border-2 border-stone-900 rounded-full hover:bg-stone-900 hover:text-white transition-all duration-200 font-medium">
          Explore Our Services
        </a>
      </div>
      
      <!-- Trust Indicators -->
      <div class="mt-16 flex flex-wrap justify-center gap-8 text-stone-600 animate-on-scroll" data-delay="300">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span>No obligation consultation</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span>100% confidential</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span>Proven results</span>
        </div>
      </div>
    </div>
  </div>
</section>