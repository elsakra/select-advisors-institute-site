---
const insights = [
  {
    title: "Who Are the 30 Ultra High Net Worth Families Living on Indian Creek Island?",
    excerpt: "An exclusive look at the residents of Miami's most prestigious address and what advisors can learn from their wealth patterns.",
    image: "https://res.cloudinary.com/dil14r8je/image/upload/v1768340819/auto-site-builder/Select%20Advisors%20Institute/image_1.jpg",
    category: "Wealth Insights"
  },
  {
    title: "From $250MM to $1.5 Billion in Five Years",
    excerpt: "How Select Advisors Institute helped one RIA achieve extraordinary growth through strategic transformation.",
    image: "https://res.cloudinary.com/dil14r8je/image/upload/v1768340824/auto-site-builder/Select%20Advisors%20Institute/image_16.jpg",
    category: "Case Study"
  },
  {
    title: "2025 Money in Motion Triggers",
    excerpt: "Critical wealth transfer opportunities that forward-thinking advisors must prepare for in the coming year.",
    image: "https://res.cloudinary.com/dil14r8je/image/upload/v1768459684/auto-site-builder/Select%20Advisors%20Institute/image_4.jpg",
    category: "Market Trends"
  }
];
---

<section id="insights" class="py-32 md:py-40 bg-white" data-module-key="featured_insights" data-dominant-signal="image">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-20 animate-on-scroll">
      <h2 class="text-6xl font-light tracking-tight text-stone-900 mb-6" data-section-header-recipe="primary">
        Strategic <span class="font-display italic">Insights</span>
      </h2>
      <p class="text-xl text-stone-600 max-w-3xl mx-auto">
        Curated perspectives on wealth management, practice growth, and industry transformation
      </p>
    </div>
    
    <!-- Editorial Grid Layout -->
    <div class="grid md:grid-cols-3 gap-8">
      {insights.map((insight, index) => (
        <article class="group animate-on-scroll" data-delay={`${(index + 1) * 100}`}>
          <div class="bg-white rounded-3xl shadow-xl shadow-stone-200/50 overflow-hidden luxury-card h-full" data-card-recipe="primary">
            <div class="aspect-[4/5] overflow-hidden">
              <img 
                src={insight.image} 
                alt={insight.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              />
            </div>
            <div class="p-8">
              <span class="text-sm font-medium text-amber-600 uppercase tracking-wider">{insight.category}</span>
              <h3 class="text-2xl font-medium text-stone-900 mt-3 mb-4 leading-tight">{insight.title}</h3>
              <p class="text-stone-600 mb-6 leading-relaxed">{insight.excerpt}</p>
              <a href="#" class="inline-flex items-center gap-2 text-stone-900 font-medium group/link">
                Read More
                <svg class="w-5 h-5 group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>