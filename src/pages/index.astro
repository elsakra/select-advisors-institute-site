---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import ClientCredibility from '../components/ClientCredibility.astro';
import FeaturedInsights from '../components/FeaturedInsights.astro';
import ResultsShowcase from '../components/ResultsShowcase.astro';
import FounderStory from '../components/FounderStory.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<Layout title="Select Advisors Institute - Elite Financial Consulting & Family Office Services">
  <main data-layout-pattern="asymmetric" data-card-style="elevated" data-button-style="pill">
    <Hero />
    <Services />
    <ClientCredibility />
    <FeaturedInsights />
    <ResultsShowcase />
    <FounderStory />
    <CTA />
    <Footer />
  </main>
  
  <script src="../scripts/animations.ts"></script>
</Layout>